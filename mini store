<script>
  const products = [
    {id: 1, name: "Classic Notebook", price: 150, img:"https://4.imimg.com/data4/NL/KV/ANDROID-6467610/product-500x500.jpeg"},
    {id: 2, name: "Blue Gel Pen", price: 30, img:"https://www.satyamstationers.com/cdn/shop/files/GP_UNI_CLICK_GEL_BLU_PCH_1_MXYZ_2_1000x_36fa7279-1ad3-4e33-8bfc-d9c2d5a899e4.jpg?v=1695222304&width=1445"},
    {id: 3, name: "Daily Planner", price: 250, img:"https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSEXV42wtb-uDBEjUSrAbuyXWbuyIAFTM9qNQ&s"},
    {id: 4, name: "Art Brush Set", price: 350, img:"https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTiPLxEJY5Iu1lOTglN5_GY-76Gcs1UeapyWA&s"},
    {id: 4, name:"Earsers", price: 30, img:"https://www.google.com/url?sa=i&url=https%3A%2F%2Fwww.indiamart.com%2Fproddetail%2Fnon-dust-eraser-19013722012.html%3Fsrsltid%3DAfmBOopojLpcHr8uBTHAIFtl0xan2XwadcKUOPIrFda68G8H1RftBQMr&psig=AOvVaw1Q1mX0zF6lvLXS3Q3YRQzO&ust=1762442091427000&source=images&cd=vfe&opi=89978449&ved=0CBUQjRxqFwoTCIi2xMym25ADFQAAAAAdAAAAABAE_"},
    {id: 4, name: "Highlighters", price: 50, img:"https://www.google.com/url?sa=i&url=https%3A%2F%2Fwww.amazon.in%2FMeRaYo-Highlighter-Pastel-Highlighters-Stationary%2Fdp%2FB0C8YXHBBZ&psig=AOvVaw0zVIJq37XxLtgBv5Dpp_8C&ust=1762442191827000&source=images&cd=vfe&opi=89978449&ved=0CBUQjRxqFwoTCLjm8vum25ADFQAAAAAdAAAAABAE"},

  ];

  let cart = [];

  function updateCartCount() {
    document.getElementById('cart').textContent = cart.reduce((sum, p) => sum + p.qty, 0);
  }

  function addToCart(productId) {
    const product = products.find(p => p.id === productId);
    let cartItem = cart.find(p => p.id === productId);
    if(cartItem) {
      cartItem.qty++;
    } else {
      cart.push({...product, qty: 1});
    }
    updateCartCount();
    alert(product.name + " added to cart!");
  }

  function buyNow(productId) {
    alert("Buying " + products.find(p => p.id === productId).name);
  }

  function loadProducts() {
    const productList = document.getElementById('product-list');
    products.forEach(product => {
      const div = document.createElement('div');
      div.className = 'product';
      div.innerHTML = `
        <img src="${product.img}" alt="${product.name}" />
        <h3>${product.name}</h3>
        <p>â‚¹${product.price}</p>
        <button onclick="addToCart(${product.id})">Add to Cart</button>
        <button onclick="buyNow(${product.id})">Buy Now</button>
      `;
      productList.appendChild(div);
    });
  }

  loadProducts();
  updateCartCount();
</script>

